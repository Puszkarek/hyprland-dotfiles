[
  {
    "output": "DP-2",
    "layer": "top",
    "spacing": 0,
    "height": 0,

    "margin-top": 1,
    "margin-right": 5,
    "margin-bottom": 0,
    "margin-left": 5,

    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["custom/cava"],
    "modules-right": ["tray", "battery"],

    "custom/cava": {
      "exec": "cava -p /dev/stdin <<EOF | sed -u 's/;//g;s/0/▁/g;s/1/▂/g;s/2/▃/g;s/3/▄/g;s/4/▅/g;s/5/▆/g;s/6/▇/g;s/7/█/g;'\n[general]\nbars = 25\n[output]\nmethod = raw\nraw_target = /dev/stdout\ndata_format = ascii\nascii_max_range = 7\nEOF"
    },
    "tray": {
      "spacing": 10,
      "tooltip": false
    },
    "hyprland/workspaces": {
      "all-outputs": false,
      "tooltip": false
    }
  },
  {
    "output": "HDMI-A-1",
    "layer": "top",
    "spacing": 0,
    "height": 0,

    "margin-top": 1,
    "margin-right": 5,
    "margin-bottom": 0,
    "margin-left": 5,

    "modules-left": ["hyprland/workspaces", "custom/lyrics"],
    "modules-center": ["clock"],
    "modules-right": ["cpu", "memory", "temperature", "network"],

    "hyprland/workspaces": {
      "all-outputs": false,
      "tooltip": false
    },
    "clock": {
      "format": "{:%I:%M %p - %a, %d %b %Y}",
      "tooltip": true,
      "tooltip-format": "<tt><small>{calendar}</small></tt>"
    },

    "cpu": {
      "format": "{usage}% CPU",
      "tooltip": true,
      "interval": 2,

      "states": {
        "critical": 90
      }
    },
    "memory": {
      "format": "{percentage}% M",
      "tooltip": true,
      "interval": 2,

      "states": {
        "critical": 80
      }
    },
    "network": {
      "format-wifi": "{bandwidthDownBits}",
      "format-ethernet": "{bandwidthDownBits}",
      "format-disconnected": "no network",
      "interval": 5,
      "tooltip": true
    },
    "temperature": {
      "critical-threshold": 80,
      "format": "{temperatureC}°C"
    },
    "battery": {
      "states": {
        "critical": 20,
        "warning": 40
      }
    },
    "custom/lyrics": {
      "exec": "waybar-bard",
      "format": "{} <span font='11' fgalpha='50%' style='italic'>{alt}</span>",
      "return-type": "json",
      "tooltip": true
    }
  }
]
